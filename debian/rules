#!/usr/bin/make -f

%:
	dh $@  --parallel

override_dh_test:
	# disable now since Make seems to ignore the TEMPO2 variable
	true

override_dh_auto_configure:
	dh_auto_configure -- --with-tempo2-plug-dir=/usr/libexec/tempo2

override_dh_auto_build:
	dh_auto_buid 
	dh_auto_buid -- plugins

override_dh_auto_install:
	dh_auto_install -- install plugins-install plugindir=$(PWD)/debian/tempo2/usr/local/libexec

